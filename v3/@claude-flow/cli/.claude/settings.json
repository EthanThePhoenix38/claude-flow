{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "^(Write|Edit|MultiEdit)$",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/helpers/auto-memory-hook.mjs pre-edit 2>NUL || node .claude/helpers/auto-memory-hook.mjs pre-edit 2>/dev/null || exit 0",
            "timeout": 5000,
            "continueOnError": true
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "^(Write|Edit|MultiEdit)$",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/helpers/auto-memory-hook.mjs post-edit 2>NUL || node .claude/helpers/auto-memory-hook.mjs post-edit 2>/dev/null || exit 0",
            "timeout": 5000,
            "continueOnError": true
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/helpers/auto-memory-hook.mjs import 2>NUL || node .claude/helpers/auto-memory-hook.mjs import 2>/dev/null || exit 0",
            "timeout": 8000,
            "continueOnError": true
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/helpers/auto-memory-hook.mjs sync 2>NUL || node .claude/helpers/auto-memory-hook.mjs sync 2>/dev/null || exit 0",
            "timeout": 10000,
            "continueOnError": true
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/helpers/auto-memory-hook.mjs sync 2>NUL || node .claude/helpers/auto-memory-hook.mjs sync 2>/dev/null || exit 0",
            "timeout": 10000,
            "continueOnError": true
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "node .claude/helpers/statusline.cjs 2>NUL || node .claude/helpers/statusline.cjs 2>/dev/null || echo Claude Flow V3",
    "refreshMs": 5000,
    "enabled": true
  },
  "permissions": {
    "allow": [
      "Bash(npx claude-flow:*)",
      "Bash(npx @claude-flow/cli:*)",
      "mcp__claude-flow__:*"
    ],
    "deny": []
  },
  "claudeFlow": {
    "version": "3.0.0",
    "enabled": true,
    "agentTeams": {
      "enabled": true,
      "teammateMode": "auto",
      "taskListEnabled": true,
      "mailboxEnabled": true
    },
    "swarm": {
      "topology": "hierarchical-mesh",
      "maxAgents": 15
    },
    "memory": {
      "backend": "hybrid",
      "enableHNSW": true
    },
    "neural": {
      "enabled": true
    }
  }
}
